<div class="signup box">

  <div class="signup text">
    <h2>Get a free account now</h2>

  </div>

  <div class="signup-content">

    <div class="signup-form">
      {{!-- START OF FORM --}}

      <form action="/auth/signup" method="POST" id="form-container">
        <div>

          <label for="username">Username</label>
          <br>
          <input id="username" class="form-control" type="text" name="username" placeholder="Your username">
          <br> <br>
          <label for="password">Password</label>
          <br>
          <input id="password" class="form-control" type="password" name="password" placeholder="Your password">
        </div>

        <br>
        {{#if message }}
        <div class="error-message">{{ message }}</div>
        {{/if}}

        <br>

        <button class="btn btn-light btn-primary" aria-pressed="true">Sign up</button>

        <p class="account-message">
          Do you already have an account?
          <a href="/auth/login">Login</a>
        </p>
      </form>
      {{!-- END OF FORM --}}
    </div>

  </div>


</div>